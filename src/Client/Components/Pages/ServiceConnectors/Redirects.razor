@page "/service-connectors/get-started/{Provider}"

@inject NavigationManager Navigation
@inject IOptionsSnapshot<DocsSiteOptions> DocsSiteOptions

@code
{
    [Parameter] public string Provider { get; set; } = string.Empty;

    protected override void OnParametersSet()
    {
        Navigation.NavigateTo($"{DocsSiteOptions.Value.BaseAddress}/guides/service-connectors/{TranslateProviderName(Provider)}.html");
    }

    private static string TranslateProviderName(string provider)
    {
        return provider.ToLower() switch
        {
            "rabbit" => "rabbitmq",
            _ => provider
        };
    }
}
